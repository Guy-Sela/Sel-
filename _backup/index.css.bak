* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

/* Slides */
.slide {
  position: absolute;
  inset: 0;
  opacity: 0;
  transition: opacity 0.8s ease;
  pointer-events: none;
}

.slide.active {
  opacity: 1;
  pointer-events: auto;
}

.slide video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.4;
}

.slide-title {
  position: absolute;
  bottom: 4rem;
  left: 1rem;
  font-size: 0.7rem;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  color: rgba(255,255,255,0.6);
}

@media (min-width: 768px) {
  .slide-title {
    left: 2rem;
    bottom: 2.5rem;
  }
}

/* Arrows */
.arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  border: none;
  color: rgba(255,255,255,0.4);
  cursor: pointer;
  padding: 1rem;
  transition: color 0.3s ease;
  z-index: 10;
}

.arrow:hover {
  color: white;
}

.arrow-left {
  left: 0.5rem;
}

.arrow-right {
  right: 0.5rem;
}

@media (min-width: 768px) {
  .arrow-left {
    left: 1.5rem;
  }
  .arrow-right {
    right: 1.5rem;
  }
}

/* Selection */
::selection {
  background: rgba(255, 255, 255, 0.2);
}
